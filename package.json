{
  "name": "polkadot-host-product-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run lint && npm run test",
    "release": "nx release",
    "build": "nx run-many -t build",
    "build:watch": "nx watch --all -- nx run \\$NX_PROJECT_NAME:build",
    "typecheck": "nx run-many -t typecheck",
    "lint": "nx run-many -t lint && eslint ./__tests__",
    "lint:fix": "nx run-many -t lint --fix && && eslint ./__tests__ --fix",
    "test": "vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@nx/eslint": "22.1.1",
    "@nx/eslint-plugin": "22.1.2",
    "@nx/js": "22.1.2",
    "@nx/vite": "22.1.2",
    "@nx/web": "22.1.2",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "mitt": "3.0.1",
    "nx": "22.1.2",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vite": "7.2.4",
    "vitest": "3.2.4"
  }
}
