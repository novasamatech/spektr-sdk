{
  "name": "polkadot-host-product-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run lint && npm run test",
    "release": "nx release",
    "build:lib": "nx run-many -t build --exclude host-papp-ui",
    "build:ui": "nx run build-vite --project host-papp-ui",
    "build": "npm run build:lib && npm run build:ui",
    "build:watch": "nx watch --all -- nx run \\$NX_PROJECT_NAME:build",
    "typecheck": "nx run-many -t typecheck",
    "lint": "nx run-many -t lint && eslint ./__tests__",
    "lint:fix": "nx run-many -t lint --fix && && eslint ./__tests__ --fix",
    "test": "vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@nx/eslint": "22.1.3",
    "@nx/eslint-plugin": "22.1.3",
    "@nx/js": "22.1.3",
    "@nx/storybook": "22.1.3",
    "@nx/vite": "22.1.3",
    "@nx/web": "22.1.3",
    "@storybook/react-vite": "10.1.4",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.3",
    "@swc/helpers": "0.5.17",
    "@types/node": "24.10.1",
    "@vitejs/plugin-react": "5.1.1",
    "@vitest/ui": "4.0.15",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jiti": "2.4.2",
    "nanoevents": "9.1.0",
    "nx": "22.1.1",
    "prettier": "3.6.2",
    "storybook": "10.1.4",
    "ts-node": "10.9.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vite": "7.2.7",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-externalize-deps": "0.10.0",
    "vitest": "4.0.15"
  }
}
