{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tui": {
    "autoExit": true
  },
  "release": {
    "version": {
      "preVersionCommand": "npm run prepublishOnly"
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "namedInputs": {
    "sharedGlobals": [{ "runtime": "node --version" }, "{workspaceRoot}/tsconfig.json", "{workspaceRoot}/package.json"],
    "default": ["{projectRoot}/**/*", "sharedGlobals"]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build", "default"],
      "inputs": ["default"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck", "default"],
      "inputs": ["default"]
    },
    "lint": {
      "dependsOn": ["^build", "default", "{workspaceRoot}/eslint.config.js"],
      "inputs": ["default"]
    }
  }
}
